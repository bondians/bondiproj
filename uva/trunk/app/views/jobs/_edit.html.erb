<%#= debug params %>

<% form_for @job do |f| %>
  <%#= f.error_messages %>
  <div id='jobinfo'>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :ticket %><br />
    <%= f.text_field :ticket %>
  </p>
  <p>
     <%= f.label :description %><br />
     <%= f.text_area :description %>
   </p>
   </div>
  <div id='dateinfo'>
   <p>
     <%= f.label :due_date %><br />
     <%#= f.date_select :due_date %>
     <%= calendar_box 'job', 'due_date'%>
   </p>
   <p>
     <%= f.label :due_time %><br />
     <%= f.time_select :due_time %>
     <%#= calendar_select 'job', 'due_time',
      {:class => 'datetime'}  %>
   </p>
   <p>
     <%= f.label :submit_date %><br />
     <%#= f.date_select :submit_date %>
     <%= calendar_box 'job', 'submit_date' %>
   </p>
   <p>
     <%= f.label :received_date %><br />
     <%#= f.date_select :received_date %>
     <%= calendar_box 'job', 'received_date' %>
   </p>
   </div>
   <div id='billinginfo'>
   <p>
     <%= f.label :ordered_by %><br />
     <%= f.text_field :ordered_by %>
   </p>
   <p>
     <%= f.label :auth_sig %><br />
     <%= f.check_box :auth_sig %>
   </p>
   <p>
     <%= f.label :department_id %><br />
     <!-- old way of doing it -->
     <%#= select(:job , :department_id , Department.find(:all).collect {|p| [ p.name, p.id ] }, { :include_blank => true } ) %>
     <!-- the new hotness -->
     <%= select(:job , :department_id, options_from_collection_for_select(@departments, :id, :name, @job.department_id ), { :include_blank => true } ) %>
   </p>
   <p>
     <%= f.label :account_id %><br />
     <!-- really need to javascript these two, to limit what we see in the second (below) based on what's selected in the first (above) -->
     <%= select(:job, :account_id, options_from_collection_for_select(@accounts, :id, :number, @job.account_id), { :include_blank => true } ) %>
   </p>
   </div>
   <div id='workflowinfo'>
   <!-- Here we call fields_for on the job_form builder instance.
        The block is called for each member of the workflows collection. -->
		    <% f.fields_for :workflows do |workflow_form| %>
		        <div id="workflow_<%= workflow_form.id %>">
		          <hr />
		          Task: <%= workflow_form.text_field :name, 'disabled' => 'true' %>
		          <%= workflow_form.hidden_field :name %><br />
		          <%= workflow_form.label :note, 'Note: ' %>
		          <%= workflow_form.text_field :note %><br />
		          <%= workflow_form.label :order, 'Workflow Step order: ' %>
		          <%= workflow_form.text_field :order, 'disabled' => 'true' %><br />
		          <%= workflow_form.label :completed %>
		          <%= workflow_form.check_box :completed %><br />
		          <%= workflow_form.label :completed_date %><br />
		          <%= workflow_form.date_select :completed_date %><br />
		        </div>
		      <% unless workflow_form.object.new_record? %>
		        <div>
		          <%= workflow_form.label :_delete, 'Remove:' %>
		          <%= workflow_form.check_box :_delete %>
		        </div>
		    <% end %>
		<% end %>
    <p>
    <%= f.label :input_person %><br />
    <%= @job.input_person %>
    <%= f.hidden_field :input_person %>
  </p>
   </div>
  <p><%= f.submit "Create/Update Job" %></p>
<% end %>






