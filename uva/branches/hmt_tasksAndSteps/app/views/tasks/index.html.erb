<% title "Tasks" %>

<table>
  <% for task in @tasks %>
    <tr>
      <td><%=h task.name %></td>
      <td><%=h task.order %></td>
      <td><%=h task.note %></td>
      <td><%=h task.completed %></td>
      <td><%=h task.id %></td>
  	</tr>
  	<tr>
      <td><%=h task.completed_date %></td>
      <td><%=h task.job_id %></td>
      <td><%= link_to "Show", task %></td>
      <td><%= link_to "Edit", edit_task_path(task) %></td>
      <td><%= link_to "Destroy", task, :confirm => 'Are you sure?', :method => :delete %></td>
  	</tr>
<td><hr /></td>
  <% end %>
</table>

<p><%= link_to "New Task", new_task_path %></p>
