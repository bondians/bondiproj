<h1>Listing departments</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Phone number</th>
    <th>Phone area code</th>
    <th>Fax number</th>
    <th>Fax area code</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip code</th>
  </tr>

<% @departments.each do |department| %>
  <tr>
    <td><%=h department.name %></td>
    <td><%=h department.phone_number %></td>
    <td><%=h department.phone_area_code %></td>
    <td><%=h department.fax_number %></td>
    <td><%=h department.fax_area_code %></td>
    <td><%=h department.address %></td>
    <td><%=h department.city %></td>
    <td><%=h department.state %></td>
    <td><%=h department.zip_code %></td>
    <td><%= link_to 'Show', department %></td>
    <td><%= link_to 'Edit', edit_department_path(department) %></td>
    <td><%= link_to 'Destroy', department, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

