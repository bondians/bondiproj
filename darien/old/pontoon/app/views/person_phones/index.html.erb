<h1>Listing person_phones</h1>

<table>
  <tr>
    <th>Person</th>
    <th>Phone</th>
  </tr>

<% @person_phones.each do |person_phone| %>
  <tr>
    <td><%=h person_phone.person %></td>
    <td><%=h person_phone.phone %></td>
    <td><%= link_to 'Show', person_phone %></td>
    <td><%= link_to 'Edit', edit_person_phone_path(person_phone) %></td>
    <td><%= link_to 'Destroy', person_phone, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New person_phone', new_person_phone_path %>