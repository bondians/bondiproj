<h1>Listing inquiries</h1>

<table>
  <tr>
    <th>Person</th>
    <th>Department</th>
    <th>Message text</th>
    <th>Person phone</th>
    <th>Graphic arts person</th>
    <th>Created on</th>
  </tr>

<% @inquiries.each do |inquiry| %>
  <tr>
    <td><%=h inquiry.person_id %></td>
    <td><%=h inquiry.department_id %></td>
    <td><%=h inquiry.message_text %></td>
    <td><%=h inquiry.person_phone %></td>
    <td><%=h inquiry.graphic_arts_person %></td>
    <td><%=h inquiry.created_on %></td>
    <td><%= link_to 'Show', inquiry %></td>
    <td><%= link_to 'Edit', edit_inquiry_path(inquiry) %></td>
    <td><%= link_to 'Destroy', inquiry, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New inquiry', new_inquiry_path %>