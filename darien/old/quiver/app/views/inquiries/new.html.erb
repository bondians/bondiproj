<h1>New inquiry</h1>

<% form_for(@inquiry) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :person_id %><br />
    <%= f.collection_select :person_id, Person.find(:all), :id, :last_name %>
  </p>
  <p>
    <%= f.label :department_id %><br />
    <%= f.collection_select :department_id, Department.find(:all), :id, :name %>
  </p>
  <p>
    <%= f.label :message_text %><br />
    <%= f.text_area :message_text %>
  </p>
  <p>
    <%= f.label :persiphone_id %><br />
    <%= f.text_field :persiphone_id %>
  </p>
  <p>
    <%= f.label :artist_recipient_id %><br />
    <%= f.text_field :artist_recipient_id %>
  </p>
  <p>
    <%= f.label :artist_notater_id %><br />
    <%= f.text_field :artist_notater_id %>
  </p>
  <p>
    <%= f.label :created_on %><br />
    <%= f.datetime_select :created_on %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', inquiries_path %>