<h1>Listing people</h1>

<table>
  <tr>
    <th>Last name</th>
    <th>First name</th>
    <th>Middle name</th>
    <th>Alternate last name</th>
    <th>Email name</th>
    <th>Email domain</th>
    <th>Department</th>
    <th>Created on</th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%=h person.last_name %></td>
    <td><%=h person.first_name %></td>
    <td><%=h person.middle_name %></td>
    <td><%=h person.alternate_last_name %></td>
    <td><%=h person.email_name %></td>
    <td><%=h person.email_domain %></td>
    <td><%=h person.department.name %></td>
    <td><%=h person.created_on %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

