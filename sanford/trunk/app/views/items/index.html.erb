<h1>Listing items</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Make</th>
    <th>Number</th>
    <th>Qty</th>
    <th>Condition</th>
    <th>Request</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.description %></td>
    <td><%=h item.make %></td>
    <td><%=h item.number %></td>
    <td><%=h item.qty %></td>
    <td><%=h item.condition %></td>
    <td><%=h item.request %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item', new_item_path %>