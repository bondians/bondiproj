<h1>Listing requests</h1>

<table>
  <tr>
    <th>User</th>
    <th>Name</th>
    <th>Department</th>
    <th>Bldg</th>
    <th>Status</th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%=h request.user %></td>
    <td><%=h request.name %></td>
    <td><%=h request.department %></td>
    <td><%=h request.bldg %></td>
    <td><%=h request.status %></td>
    <td><%= link_to 'Show', request %></td>
    <td><%= link_to 'Edit', edit_request_path(request) %></td>
    <td><%= link_to 'Destroy', request, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New request', new_request_path %>