<h1>New request</h1>

<% form_for(@request) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :user %><br />
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :department %><br />
    <%= f.text_field :department %>
  </p>
  <p>
    <%= f.label :bldg %><br />
    <%= f.text_field :bldg %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
  
  <div id="items">
    <% f.fields_for :items do |item_form| %>
      <%= render :partial => 'item', :locals => { :f => item_form } %>
    <% end %>
  </div>
  <p>
    <%= link_to 'Add an Item', '#item', :class => "add_nested_item", :rel => "items" %></p>
  <p>
    
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', requests_path %>