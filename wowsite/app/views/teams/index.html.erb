<h1>Listing teams</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Size</th>
    <th>Identity</th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%=h team.number %></td>
    <td><%=h team.size %></td>
    <td><%=h team.identity %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New team', new_team_path %>