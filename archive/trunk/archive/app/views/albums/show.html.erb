<p>
  <b>Name:</b>
  <%=h @album.name %>
</p>

<p>
  <b>Artist:</b>
  <%=h @album.artist.name %>
</p>

<p>
  <b>Genre:</b>
  <%=h @album.genre.name %>
</p>

<p>
  <b>Tracks:</b>
  <table>
    <% for song in @album.songs.sort %>
      <%= render :partial => 'songs/song', :locals => { :song => song, :cur_class => cycle("cssAlternating1", "cssAlternating2") } %>
    <% end %>
  </table>
</p>

<br />
